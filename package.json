{
  "name": "delta.chat-kaios",
  "version": "1.0.0",
  "scripts": {
    "test": "tsc && npm run check-formatting",
    "check-formatting": "prettier --check \"{*.json,*.md,src/**/*.{ts,tsx,scss,html,webapp}}\"",
    "fix-formatting": "prettier --write \"{*.json,*.md,src/**/*.{ts,tsx,scss,html,webapp}}\"",
    "build": "parcel build src/index.html --no-minify",
    "watch": "parcel src/index.html",
    "package": "npm run build && ./tools/package"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/deltachat/delta.chat-kaiOs"
  },
  "license": "GPL-3.0-or-later",
  "authors": [
    "strukturart",
    "simonLaux"
  ],
  "dependencies": {
    "@fortawesome/fontawesome-free": "^5.12.0",
    "moment": "^2.29.2",
    "normalize.css": "^8.0.1",
    "parcel-bundler": "^1.12.4",
    "preact": "^10.4.0",
    "react": "^16.12.0"
  },
  "devDependencies": {
    "@babel/core": "^7.8.4",
    "@babel/plugin-transform-runtime": "^7.8.3",
    "adm-zip": "^0.4.13",
    "fs-extra": "^8.1.0",
    "node-sass": "^4.13.0",
    "parcel-plugin-bundle-visualiser": "^1.2.0",
    "parcel-plugin-clean-dist-fsextra": "git+https://github.com/Simon-Laux/parcel-plugin-clean-dist.git",
    "parcel-plugin-copy": "^1.0.2",
    "parcel-plugin-markdown-it": "^0.1.1",
    "parcel-plugin-svg-sprite": "^1.4.1",
    "prettier": "^1.19.1",
    "typescript": "^3.7.2"
  },
  "staticPath": {
    "source": "/static",
    "target": "/dist"
  }
}
